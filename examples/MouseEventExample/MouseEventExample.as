package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.ColorTransform;		public class MouseEventExample extends MovieClip{				//青い円×3		var sym1:MySymbol;		var sym2:MySymbol;		var sym3:MySymbol;		//ボタン×4		var bt1:Bt;		var bt2:Bt;		var bt3:Bt;		var bt4:Bt;		//ボタンのロールオーバー判定用変数		var notta1:Boolean = false;		var notta2:Boolean = false;		var notta3:Boolean = false;		var notta4:Boolean = false;		//青い円の目的地		var tx:Number = 300;		var ty:Number = 225;		public function MouseEventExample() {			// constructor code			//青い円の初期化・配置===================================			sym1 = new MySymbol();			sym1.x = tx;			sym1.y = ty;			this.addChild(sym1);									sym2 = new MySymbol();			sym2.x = sym1.x;			sym2.y = sym1.y;			this.addChild(sym2);			sym3 = new MySymbol();			sym3.x = sym1.x;			sym3.y = sym1.y;			this.addChild(sym3);			//ボタン1の初期化・配置・イベントリスナ登録===================================			bt1 = new Bt();			bt1.x = 100;			bt1.y = 100;			this.addChild(bt1);			//マウスオーバー／マウスアウトのイベントをリスナに登録			bt1.addEventListener(MouseEvent.MOUSE_OVER, onMOver);			bt1.addEventListener(MouseEvent.MOUSE_OUT, onMOut);						//ボタン2の初期化・配置・イベントリスナ登録===================================			bt2 = new Bt();			bt2.x = 100;			bt2.y = 350;			this.addChild(bt2);						bt2.addEventListener(MouseEvent.MOUSE_OVER, onMOver);			bt2.addEventListener(MouseEvent.MOUSE_OUT, onMOut);			//ボタン3の初期化・配置・イベントリスナ登録===================================			bt3 = new Bt();			bt3.x = 500;			bt3.y = 350;			this.addChild(bt3);						bt3.addEventListener(MouseEvent.MOUSE_OVER, onMOver);			bt3.addEventListener(MouseEvent.MOUSE_OUT, onMOut);			//ボタン4の初期化・配置・イベントリスナ登録===================================			bt4 = new Bt();			bt4.x = 500;			bt4.y = 100;			this.addChild(bt4);						bt4.addEventListener(MouseEvent.MOUSE_OVER, onMOver);			bt4.addEventListener(MouseEvent.MOUSE_OUT, onMOut);						this.addEventListener(Event.ENTER_FRAME, loop);		}		function loop(e:Event):void{			if(notta1 == true){				//ボタン1がマウスオーバー状態の場合				tx = bt1.x;				ty = bt1.y;				bt1.alpha = 0.5;			}else if(notta2 == true){		//ボタン2がマウスオーバー状態の場合				tx = bt2.x;				ty = bt2.y;				bt2.alpha = 0.5;			}else if(notta3 == true){		//ボタン3がマウスオーバー状態の場合				tx = bt3.x;				ty = bt3.y;				bt3.alpha = 0.5;			}else if(notta4 == true){		//ボタン4がマウスオーバー状態の場合				tx = bt4.x;				ty = bt4.y;				bt4.alpha = 0.5;			}else{							//どれにもマウスオーバーしていない場合				tx = 300;				ty = 225;				bt1.alpha = 1.0;				bt2.alpha = 1.0;				bt3.alpha = 1.0;				bt4.alpha = 1.0;			}			sym1.x += (tx - sym1.x) / 10.0;			sym1.y += (ty - sym1.y) / 10.0;			sym2.x += (sym1.x - sym2.x) / 10.0;			sym2.y += (sym1.y - sym2.y) / 10.0;			sym3.x += (sym2.x - sym3.x) / 10.0;			sym3.y += (sym2.y - sym3.y) / 10.0;		}				//マウスオーバーした瞬間に呼ばれるメソッド		function onMOver(e:MouseEvent):void{			//「e.target」でマウスイベントが発生した対象のオブジェクトを取得できるので、それを元に条件分岐する。			if(e.target == bt1){	//対象がbt1の場合、notta1をtrueに。				notta1 = true;			}else if(e.target == bt2){	//対象がbt2の場合、notta2をtrueに。				notta2 = true;			}else if(e.target == bt3){	//対象がbt3の場合、notta3をtrueに。				notta3 = true;			}else if(e.target == bt4){	//対象がbt4の場合、notta4をtrueに。				notta4 = true;			}		}		//マウスアウトした瞬間に呼ばれるメソッド		function onMOut(e:MouseEvent):void{			if(e.target == bt1){				notta1 = false;			}else if(e.target == bt2){				notta2 = false;			}else if(e.target == bt3){				notta3 = false;			}else if(e.target == bt4){				notta4 = false;			}		}	}	}