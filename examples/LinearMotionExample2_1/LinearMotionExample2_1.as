package  {	import flash.display.MovieClip;	import flash.events.Event;		public class LinearMotionExample2_1 extends MovieClip{		var oval:Oval;		//x方向、y方向への速度		var addX:Number;		public function LinearMotionExample2_1() {			// constructor code			oval = new Oval();			oval.x = 0;			oval.y = 225;			this.addChild(oval);						addX = 2;						this.addEventListener(Event.ENTER_FRAME, loop);		}		function loop(e:Event):void{			//インスタンスのxにaddXずつ加える			oval.x = oval.x + addX;			//インスタンスの座標が画面幅より大きくなったら			if(oval.x > this.stage.stageWidth){				addX = addX * -1;	//addXをプラスマイナス逆に				oval.x = this.stage.stageWidth;	//インスタンスの座標を画面幅に			}		}	}	}