package  {	import flash.display.MovieClip;	import flash.events.Event;	import FlaUtils.FlaGraphics;	import flash.geom.Point;		public class OriginalClock extends MovieClip{				//秒数の数のオブジェクト		var secondsObjs:Array;		//初期化されたかどうか		var isStarted:Boolean = false;		public function OriginalClock() {			// constructor code			this.addEventListener(Event.ENTER_FRAME, loop);		}				function loop(e:Event):void{			if(!isStarted){				secondsObjs = new Array();				var curX:int = 30;				var curY:int = 30;				for(var i:uint = 0; i < 60; i++){					secondsObjs.push(new RectObject(i*255.0/60.0, 0, 0));					secondsObjs[i].x = curX;					secondsObjs[i].y = curY;					curX += 60;					if(curX >= this.stage.stageWidth){						curX = 30;						curY += 60;					}					this.addChild(secondsObjs[i]);				}				isStarted = true;							}			this.graphics.clear();			var date:Date = new Date();			var minutes:Number = date.getMinutes();			var hours:Number = date.getHours();			var seconds:Number = date.getSeconds();			trace(hours + "時" + minutes + "分" + seconds + "秒");			/* 秒 */			var curPt:Point = new Point(0, 0);			for(i = 0; i < secondsObjs.length; i++){				if(i < seconds){					secondsObjs[i].isOn = true;				}else{					secondsObjs[i].isOn = false;				}			}		}	}	}