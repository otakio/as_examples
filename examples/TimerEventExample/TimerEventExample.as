package  {	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;	import FlaUtils.FlaGraphics;		public class TimerEventExample extends MovieClip{				var timer:Timer;		public function TimerEventExample() {			// constructor code			/* Timerクラスのインスタンスを宣言・初期化し、タイマーの間隔を1000ミリ秒に設定。 */			timer = new Timer(1000);			/* TimerEventが起きるたびにonTimerEventHappenedが呼ばれる */			timer.addEventListener(TimerEvent.TIMER, onTimerEventHappened);			/* Timerを開始する */			timer.start();		}				function onTimerEventHappened(e:TimerEvent):void{			/* グラフィックをクリア */			this.graphics.clear();			/* ランダムで色を設定 */			FlaGraphics.setColor(255 * Math.random(), 255 * Math.random(), 255 * Math.random());			/* 画面全体を塗りつぶす（長方形を描く） */			FlaGraphics.fillRect(this, 0, 0, this.stage.stageWidth, this.stage.stageHeight);		}	}	}