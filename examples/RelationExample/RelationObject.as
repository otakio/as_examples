package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;	import flash.events.MouseEvent;		public class RelationObject extends MovieClip{		public var iPt:Point;		public var friends:Array;		public var isDown:Boolean;				public function RelationObject() {			// constructor code			this.addEventListener(Event.ENTER_FRAME, loop);						iPt = new Point(x, y);			friends = new Array();			this.addEventListener(MouseEvent.MOUSE_DOWN, onMDown);			this.addEventListener(MouseEvent.MOUSE_UP, onMUp);			isDown = false;			this.buttonMode = true;		}		public function addFriend(newFriend:RelationObject){			var alreadyFriend:Boolean = false;			for(var i:uint = 0; i < friends.length; i++){				if(newFriend == friends[i]) alreadyFriend = true;			}			if(!alreadyFriend){				friends.push(newFriend);			}		}		function loop(e:Event):void{			x += (int(iPt.x) - x) / 10.0;			y += (int(iPt.y) - y) / 10.0;			if(Math.abs(x - iPt.x) < 1.0)				x = iPt.x;			if(Math.abs(y - iPt.y) < 1.0)				y = iPt.y;										}		function onMDown(e:MouseEvent):void{			isDown = true;			trace("true");		}		function onMUp(e:MouseEvent):void{			isDown = false;			trace("false");		}	}	}