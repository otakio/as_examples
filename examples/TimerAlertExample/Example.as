package  {	import flash.display.MovieClip;	import flash.events.Event;		public class Example extends MovieClip{				var alermDate:Date;		var isAlermCalled:Boolean;		var timerView:TimerView;		public function Example() {			// constructor code			this.addEventListener(Event.ENTER_FRAME, loop);						alermDate = new Date(2012,08,15,07,43,00,0000);	//「月」は0〜11なので1早める						timerView = new TimerView();			timerView.x = 300;			timerView.y = 225;			this.addChild(timerView);						isAlermCalled = false;		}		function loop(e:Event):void{			var curDate:Date = new Date();			timerView.curTimeField.text = curDate.toLocaleTimeString();			timerView.alermTimeField.text = alermDate.toLocaleTimeString();			if(curDate.time > alermDate.time){				onAlerm();			}else{							}		}		function onAlerm():void{			if(isAlermCalled != true){				trace("alerm");				timerView.alermTimeField.textColor = 0xFF0000;			}			isAlermCalled = true;					}	}	}