package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		public class Scene1 extends MovieClip{				var oval:OvalSymbol;				var radius:Number;		var center:Point;		var angle:Number;				var motionMode:int = 0;	//動きのモード。0は右回りの円運動。1は左回り。2は高速右回り。		//コンストラクタに引数を加える（「= 0」は指定がない場合に代入される値）		public function Scene1(theMotionMode:int = 0) {			// constructor code			this.motionMode = theMotionMode;			this.addEventListener(Event.ENTER_FRAME, loop);						radius = 180;			center = new Point(300, 225);			angle = 0;						oval = new OvalSymbol();			oval.x = center.x + radius * Math.cos(angle);			oval.y = center.y + radius * Math.sin(angle);			this.addChild(oval);								}		function loop(e:Event):void{			if(motionMode == 0){				angle += 0.05;			}else if(motionMode == 1){				angle -= 0.05;			}else if(motionMode == 2){				angle += 0.1;			}			oval.x = center.x + radius * Math.cos(angle);			oval.y = center.y + radius * Math.sin(angle);		}	}	}