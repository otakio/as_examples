package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		public class Scene1 extends MovieClip{				var oval:OvalSymbol;		var radius:Number;		var center:Point;		var angle:Number;		//コンストラクタに引数を加える（「= 0」は指定がない場合の値）		public function Scene1(xx:Number = 0, yy:Number = 0) {			// constructor code			this.x = xx;	//引数から初期座標を決定			this.y = yy;	//引数から初期座標を決定			this.addEventListener(Event.ENTER_FRAME, loop);						radius = 180;			center = new Point(300, 225);			angle = 0;						oval = new OvalSymbol();			oval.x = center.x + radius * Math.cos(angle);			oval.y = center.y + radius * Math.sin(angle);			this.addChild(oval);								}		function loop(e:Event):void{			angle += 0.05;			oval.x = center.x + radius * Math.cos(angle);			oval.y = center.y + radius * Math.sin(angle);		}	}	}