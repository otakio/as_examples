package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;    import flash.text.*;		public class Person extends MovieClip{				public var isDown:Boolean;		public var fukidashi:FukidashiObject;		public function Person() {			// constructor code			this.addEventListener(MouseEvent.MOUSE_DOWN, onMDown);			this.addEventListener(MouseEvent.MOUSE_UP, onMUp);			this.addEventListener(MouseEvent.MOUSE_OVER, onMOver);			this.addEventListener(MouseEvent.MOUSE_OUT, onMOut);			isDown = false;									fukidashi = new FukidashiObject();			fukidashi.x = 0;			fukidashi.y = -55;			fukidashi.textField.text = "I'm not Honda";			fukidashi.visible = false;			this.addChild(fukidashi);		}		function onMOver(e:MouseEvent):void{			fukidashi.visible = true;		}		function onMOut(e:MouseEvent):void{			fukidashi.visible = false;		}		function onMDown(e:MouseEvent):void{			isDown = true;			trace("true");		}		function onMUp(e:MouseEvent):void{			isDown = false;			trace("false");		}	}	}