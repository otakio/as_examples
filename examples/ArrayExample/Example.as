package  {	import flash.display.MovieClip;	import flash.events.Event;		public class Example extends MovieClip{				//配列の宣言（Arrayインスタンス）		var symbols:Array;		var addX:Array;		var addY:Array;		public function Example() {			// constructor code			//配列の初期化（長さを指定するやり方）			symbols = new Array(100);			//長さ200の配列として初期化			addX = new Array(symbols.length);	//symbols.lengthでsymbolsの長さが得られる			addY = new Array(symbols.length);						//symbolsの長さだけループさせる			for(var i:uint = 0; i < symbols.length; i++){				symbols[i] = new MySymbol();		//i番目の要素にMySymbolインスタンスを代入				symbols[i].x = Math.random() * 600;	//0〜600の間でランダムに数値を代入				symbols[i].y = Math.random() * 450;	//0〜450の間でランダムに数値を代入				this.addChild(symbols[i]);			//ステージ上に配置				addX[i] = new Number(Math.random()*6.0 - 3);	//-3.0〜3.0の間でランダムに数値を代入				addY[i] = new Number(Math.random()*6.0 - 3);	//-3.0〜3.0の間でランダムに数値を代入			}						this.addEventListener(Event.ENTER_FRAME, loop);					}		function loop(e:Event):void{			//symbolsの長さだけループさせる			for(var i:uint = 0; i < symbols.length; i++){				symbols[i].x += addX[i];	//addXのi番目の要素ぶん移動				symbols[i].y += addY[i];	//addYのi番目の要素ぶん移動								//壁に当たったら跳ね返らせる				if(symbols[i].x < 0){					addX[i] *= -1;					symbols[i].x = 0;				}else if(symbols[i].x > this.stage.stageWidth){					addX[i] *= -1;					symbols[i].x = this.stage.stageWidth;				}				if(symbols[i].y < 0){					addY[i] *= -1;					symbols[i].y = 0;				}else if(symbols[i].y > this.stage.stageHeight){					addY[i] *= -1;					symbols[i].y = this.stage.stageHeight;				}							}		}	}}