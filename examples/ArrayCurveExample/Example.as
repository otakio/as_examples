package  {	import flash.display.MovieClip;	import flash.events.Event;	import FlaUtils.*;	import flash.geom.Point;		public class Example extends MovieClip{				var pts:Array;				public function Example() {			// constructor code			addEventListener(Event.ENTER_FRAME, onEnterFrame);			pts = new Array();			for(var i:uint = 0; i < 30; i++){				pts.push(new Point(300, 300));			}		}		function onEnterFrame(e:Event):void{			this.graphics.clear();			FlaGraphics.setColor(0, 0, 0);			FlaGraphics.setLineWidth(0);						pts[0].x += (this.mouseX - pts[0].x) / 10.0;			pts[0].y += (this.mouseY - pts[0].y) / 10.0;						for(var i:uint = 1; i < pts.length; i++){				pts[i].x += (pts[i-1].x - pts[i].x) / 10.0;				pts[i].y += (pts[i-1].y - pts[i].y) / 10.0;			}			FlaGraphics.drawCurves(this, pts);		}	}	}