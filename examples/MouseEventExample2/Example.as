package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;		public class Example extends MovieClip{				var mySymbol:MySymbol;	//円		var addX:Number = Math.random() * 6.0 - 3.0;	//-3.0〜3.0の間で数値を代入		var addY:Number = Math.random() * 6.0 - 3.0;	//-3.0〜3.0の間で数値を代入		var isOver:Boolean = false;		//ロールオーバー／アウト用変数		var isDown:Boolean = false;		//マウスダウン／アップ用変数				//クリック回数		var count:int = 0;		 		public function Example() {			// constructor code						mySymbol = new MySymbol;			mySymbol.x = 300;			mySymbol.y = 225;			this.addChild(mySymbol);						//イベントリスナの追加			mySymbol.addEventListener(MouseEvent.MOUSE_DOWN, onMDown);			mySymbol.addEventListener(MouseEvent.MOUSE_UP, onMUp);			mySymbol.addEventListener(MouseEvent.ROLL_OVER, onROver);			mySymbol.addEventListener(MouseEvent.ROLL_OUT, onROut);									this.addEventListener(Event.ENTER_FRAME, loop);					}		function loop(e:Event):void{			if(isOver != true){				mySymbol.x += addX;				mySymbol.y += addY;				if(mySymbol.x < 0){					addX *= -1;					mySymbol.x = 0;				}				if(mySymbol.x > this.stage.stageWidth){					addX *= -1;					mySymbol.x = this.stage.stageWidth;				}				if(mySymbol.y < 0){					addY *= -1;					mySymbol.y = 0;				}				if(mySymbol.y > this.stage.stageHeight){					addY *= -1;					mySymbol.y = this.stage.stageHeight;				}				mySymbol.scaleX += (1.0 - mySymbol.scaleX) / 10.0;				mySymbol.scaleY += (1.0 - mySymbol.scaleY) / 10.0;							}else{				mySymbol.scaleX += (5.0 - mySymbol.scaleX) / 10.0;				mySymbol.scaleY += (5.0 - mySymbol.scaleY) / 10.0;			}			if(isDown == true){				mySymbol.alpha = 0.2;			}else{				mySymbol.alpha = 1.0;			}		}		//マウスダウン		function onMDown(e:MouseEvent):void{			isDown = true;			trace("down");		}		//マウスアップ		function onMUp(e:MouseEvent):void{			isDown = false;			//ランダムで再配置			mySymbol.x = Math.random() * this.stage.stageWidth;			mySymbol.y = Math.random() * this.stage.stageHeight;			mySymbol.scaleX = 1.0;			mySymbol.scaleY = 1.0;			addX = Math.random() * 6.0 - 3.0;			addY = Math.random() * 6.0 - 3.0;			count ++;			trace(count);			trace("up");		}		//ロールオーバー		function onROver(e:MouseEvent):void{			isOver = true;			trace("over");		}		//ロールアウト		function onROut(e:MouseEvent):void{			isOver = false;			isDown = false;			trace("out");		}	}	}