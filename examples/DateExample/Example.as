package  {	import flash.display.MovieClip;	import flash.events.Event;		public class Example extends MovieClip{				var symbols:Array;		var isDisplay:Array;				public function Example() {			// constructor code						symbols = new Array(60);			isDisplay = new Array(symbols.length);			var i:int;			for(i = 0; i < symbols.length; i++){				symbols[i] = new MySymbol();								symbols[i].x = i * 10;				symbols[i].y = 225;				symbols[i].alpha = 0;				this.addChild(symbols[i]);				isDisplay[i] = false;			}						this.addEventListener(Event.ENTER_FRAME, loop);					}		function loop(e:Event):void{			var date:Date = new Date();			var hours:Number = date.getHours();			var minutes:Number = date.getMinutes();			var seconds:Number = date.getSeconds();			var mSeconds:Number = date.getMilliseconds();			trace(hours +"時" + minutes + "分" +seconds +"秒" + mSeconds);						var i:int;			for(i = 0; i < symbols.length; i++){				if(i <= seconds){					isDisplay[i] = true;				}else{					isDisplay[i] = false;				}				if(isDisplay[i] == true){					symbols[i].alpha += (1.0 - symbols[i].alpha) / 10.0;				}else{					symbols[i].alpha += (0.0 - symbols[i].alpha) / 10.0;				}						}		}	}	}