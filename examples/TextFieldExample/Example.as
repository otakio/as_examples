package  {	import flash.display.MovieClip;	import flash.events.Event;    import flash.text.TextField;    import flash.text.TextFormat;		public class Example extends MovieClip{				var st:String;	//文字列を扱うString型のインスタンス		var tf:TextField;	//テキストフィールド		var textFormat:TextFormat;	//テキストフォーマット（フォントサイズとか）		public function Example() {			// constructor code			this.addEventListener(Event.ENTER_FRAME, loop);						st = new String("文字列を表示しています");						textFormat = new TextFormat();	//テキストフォーマットを初期化            textFormat.size = 24;	//フォントサイズ            textFormat.font = "Hiragino Kaku Gothic Pro W3";	//フォント						tf = new TextField();	//テキストフィールドを初期化			tf.text = st;	//テキストフィールドのテキストに文字列を代入			tf.x = 100;			tf.y = 100;			tf.width = 300;			tf.setTextFormat(textFormat);			this.addChild(tf);		}		function loop(e:Event):void{		}	}	}